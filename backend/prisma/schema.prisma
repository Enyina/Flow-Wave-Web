generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @map("_id") @default(auto())
  email               String   @unique
  password            String
  pinHash             String?
  resetOtp            String?
  resetOtpExpiry      DateTime?
  isEmailVerified     Boolean  @default(false)
  mfaEnabled          Boolean  @default(false)
  mfaSecret           String?
  failedLoginAttempts Int      @default(0)
  lockedUntil         DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model RefreshToken {
  id        String   @id @map("_id") @default(auto())
  tokenHash String
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @map("_id") @default(auto())
  userId    String
  tokenHash String
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Wallet {
  id        String  @id @map("_id") @default(auto())
  userId    String
  currency  String
  balance   Float   @default(0)
  createdAt DateTime @default(now())
}

model VirtualAccount {
  id         String @id @map("_id") @default(auto())
  userId     String
  providerId String?
  currency   String
  details    Json?
  createdAt  DateTime @default(now())
}

model Transaction {
  id         String @id @map("_id") @default(auto())
  userId     String
  walletId   String?
  amount     Float
  currency   String
  fee        Float?  
  status     String  @default("pending")
  providerId String?
  meta       Json?
  createdAt  DateTime @default(now())
}

model WebhookEvent {
  id        String @id @map("_id") @default(auto())
  provider  String
  payload   Json
  processed Boolean @default(false)
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String @id @map("_id") @default(auto())
  userId    String?
  action    String
  meta      Json?
  createdAt DateTime @default(now())
}

model Recipient {
  id        String @id @map("_id") @default(auto())
  userId    String
  name      String
  accountNumber String?
  bankCode  String?
  currency  String
  meta      Json?
  createdAt DateTime @default(now())
}
